<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainRelativeLayout"
    style="@style/Layout.Item"
    android:layout_marginBottom="8dip">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/mainImageView"
        style="@style/ImageView.GoodsVer"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:layout_marginEnd="8dip"
        android:layout_marginRight="8dip" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/nameTextView"
        style="@style/TextView.Name"
        android:layout_alignTop="@+id/mainImageView"
        android:layout_toEndOf="@+id/mainImageView"
        android:layout_toRightOf="@+id/mainImageView" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/moneyTextView"
        style="@style/TextView.Money"
        android:layout_below="@+id/nameTextView"
        android:layout_marginTop="4dip"
        android:layout_toEndOf="@+id/mainImageView"
        android:layout_toRightOf="@+id/mainImageView" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/timeTextView"
        style="@style/TextView.Normal"
        android:layout_below="@+id/moneyTextView"
        android:layout_marginTop="4dip"
        android:layout_toEndOf="@+id/mainImageView"
        android:layout_toRightOf="@+id/mainImageView" />

    <View
        android:id="@+id/lineView"
        style="@style/View.Line"
        android:layout_below="@+id/mainImageView"
        android:layout_marginTop="8dip" />

    <RelativeLayout
        style="@style/Layout.Wrap"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lineView"
        android:paddingTop="8dip">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/editTextView"
            style="@style/TextView.Small"
            android:layout_marginEnd="8dip"
            android:layout_marginRight="8dip"
            android:layout_toLeftOf="@+id/optionTextView"
            android:layout_toStartOf="@+id/optionTextView"
            android:background="@drawable/selector_border_selector"
            android:paddingBottom="4dip"
            android:paddingLeft="8dip"
            android:paddingRight="8dip"
            android:paddingTop="4dip"
            android:text=" 编辑 "
            tools:ignore="HardcodedText" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/optionTextView"
            style="@style/TextView.Small"
            android:layout_marginEnd="8dip"
            android:layout_marginRight="8dip"
            android:layout_toLeftOf="@+id/deleteTextView"
            android:layout_toStartOf="@+id/deleteTextView"
            android:background="@drawable/selector_border_selector"
            android:paddingBottom="4dip"
            android:paddingLeft="8dip"
            android:paddingRight="8dip"
            android:paddingTop="4dip"
            android:text=" Option "
            tools:ignore="HardcodedText" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/deleteTextView"
            style="@style/TextView.Small"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_border_selector"
            android:paddingBottom="4dip"
            android:paddingLeft="8dip"
            android:paddingRight="8dip"
            android:paddingTop="4dip"
            android:text=" 删除 "
            tools:ignore="HardcodedText" />

    </RelativeLayout>

</RelativeLayout>
