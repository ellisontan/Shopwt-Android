<?xml version="1.0" encoding="utf-8"?>

<top.yokey.shopwt.view.SlidingView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainSlidingView"
    style="@style/Layout.Wrap">

    <RelativeLayout
        android:id="@+id/mainRelativeLayout"
        style="@style/Layout.Wrap">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/deleteTextView"
            style="@style/TextView.Delete"
            android:layout_alignBottom="@+id/contentRelativeLayout"
            android:layout_alignTop="@+id/contentRelativeLayout"
            android:layout_toEndOf="@+id/contentRelativeLayout"
            android:layout_toRightOf="@+id/contentRelativeLayout" />

        <RelativeLayout
            android:id="@+id/contentRelativeLayout"
            style="@style/Layout.Item">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/mainImageView"
                android:layout_width="48dip"
                android:layout_height="48dip"
                android:layout_marginEnd="8dip"
                android:layout_marginRight="8dip"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_default_avatar" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/nameTextView"
                style="@style/TextView.Name"
                android:layout_toEndOf="@+id/mainImageView"
                android:layout_toRightOf="@+id/mainImageView"
                android:paddingBottom="2dip"
                android:paddingTop="4dip" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/contentTextView"
                style="@style/TextView.Small"
                android:layout_below="@+id/nameTextView"
                android:layout_toEndOf="@+id/mainImageView"
                android:layout_toRightOf="@+id/mainImageView" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/timeTextView"
                style="@style/TextView.Time"
                android:layout_alignBottom="@+id/nameTextView"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/nameTextView" />

        </RelativeLayout>

    </RelativeLayout>

</top.yokey.shopwt.view.SlidingView>
